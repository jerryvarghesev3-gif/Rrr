package com.connect.connection

import android.content.Intent
import android.net.Uri
import android.os.Bundle
import android.widget.Button
import android.widget.ImageView
import android.widget.TextView
import androidx.appcompat.app.AppCompatActivity

class SummaryBActivity : AppCompatActivity() {

    private lateinit var txtGatewayB: TextView
    private lateinit var txtBedB: TextView
    private lateinit var txtLocationB: TextView
    private lateinit var imgPreviewB: ImageView
    private lateinit var btnNextB: Button
    private lateinit var btnBackB: Button

    // Keep our own keys here so this Activity compiles independently
    companion object {
        const val EXTRA_GATEWAY = "gatewayId"
        const val EXTRA_BED = "bedId"
        const val EXTRA_LOCATION = "locationId"
        const val EXTRA_IMAGE_URI = "imageUri"
    }

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_summary_b)

        // Bind UI
        txtGatewayB = findViewById(R.id.txtGatewayB)
        txtBedB = findViewById(R.id.txtBedB)
        txtLocationB = findViewById(R.id.txtLocationB)
        imgPreviewB = findViewById(R.id.imgPreviewB)
        btnNextB = findViewById(R.id.btnNextB)
        btnBackB = findViewById(R.id.btnBackB)

        // Read what QRBActivity sent us
        val gatewayId: String = intent.getStringExtra(EXTRA_GATEWAY).orEmpty()
        val bedId: String = intent.getStringExtra(EXTRA_BED).orEmpty()
        val locationId: String = intent.getStringExtra(EXTRA_LOCATION).orEmpty()
        val imageUri: Uri? = intent.getStringExtra(EXTRA_IMAGE_URI)?.let { Uri.parse(it) }

        // Populate UI
        txtGatewayB.text = "Gateway: $gatewayId"
        txtBedB.text = "Bed ID: $bedId"
        txtLocationB.text = "Location ID: $locationId"
        imageUri?.let { imgPreviewB.setImageURI(it) }

        // Back just returns to QRBActivity
        btnBackB.setOnClickListener { finish() }

        // Next â†’ Final SummaryActivity with all values
        btnNextB.setOnClickListener {
            val i = Intent(this, SummaryActivity::class.java).apply {
                putExtra(EXTRA_GATEWAY, gatewayId)
                putExtra(EXTRA_BED, bedId)
                putExtra(EXTRA_LOCATION, locationId)
                imageUri?.toString()?.let { putExtra(EXTRA_IMAGE_URI, it) }
                addFlags(Intent.FLAG_GRANT_READ_URI_PERMISSION)
            }
            startActivity(i)
        }
    }
}






